#!/bin/bash

# dtd-build
# usage dtd-build [clean|source|build|update] [composer|drush|tracks|desktop|server|vm|vagrant|tools|win|usb|all]
dtd_build_dir="/opt/dtd-build"

# Load common routines
source $dtd_build_dir/lib/common/dtd-common

# Load config and sources.
dtd_load_config;
dtd_load_local;
dtd_load_sources;
dtd_load_targets;

case "$1" in
  clean )
    uck-remaster-clean $dtd_build_dir/tmp/$2/remaster
    rm -R $dtd_build_dir/tmp/$2/customization-scripts
    ;;
  source )
    source $dtd_build_dir/lib/common/dtd-sources
    case "$2" in
      composer | drush | desktop | server | tools )
        dtd_source_get $2
        # dtd_source_check $2
        ;;
      win )
        dtd_source_get_win
        ;;
      tracks )
        if [ "$3" ]; then
          dtd_source_get $3 tracks
#        elfi
#          dtd_tracks_get_all
        fi
        ;;
      vm | vagrant | usb )
        echo 'Nothing to fetch for "$2"'
        ;;
      "" )
        dtd_source_get_all
        ;;
    esac
    ;;
  build )
    # dtd_build_prep $2
    case "$2" in
      composer )
        source $dtd_build_dir/lib/drush/dtd-drush
        dtd_build_composer
        ;;
      drush )
        source $dtd_build_dir/lib/drush/dtd-drush
        dtd_build_drush
        ;;
      desktop )
        source $dtd_build_dir/lib/desktop/dtd-desktop
        dtd_build_desktop
        ;;
      server )
        source $dtd_build_dir/lib/server/dtd-server
        dtd_build_server
        ;;
      win )
        source $dtd_build_dir/lib/win/dtd-win
        dtd_build_win
        ;;
      all | "" )
        source $dtd_build_dir/lib/desktop/dtd-desktop
        dtd_build_desktop
        source $dtd_build_dir/lib/server/dtd-server
        dtd_build_server
        source $dtd_buid_dir/lib/win/dtd-win
        dtd_build_win
        ;;
    esac
    ;;
  all )

    dtd_source_get_all

    dtd_build_composer

    dtd_build_drush

    dtd_build_tracks

    dtd_build_win

    dtd_build_server

    dtd_build_vm_server

    dtd_build_desktop

    dtd_build_usb
  ;;
esac

#!/bin/bash

# DTD-TOOLS Installer
# Will install requirements for the DTD build environment.

# Am I root?

# Check disk space

apt-get remove -y transmission-gtk
# Install dependencies
apt-get update -y
apt-get upgrade -y
apt-get install -y git uck syslinux virtualbox transmission-daemon transmission-remote zsync

pushd /opt
git clone https://github.com/dtd-tech/dtd-tools.git
popd


# Create a GPG gpg-key
gpg --gen-key

